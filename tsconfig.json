{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "lib": [
      "es2019",
      "dom"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "jest",
      "react",
      "react-native",
      "expo-router",
      "node"
    ]
  },
  "include": [
    "app",
    "src",
    "index.ts",
    "jest-setup.ts",
    "tests"
  ],
  "exclude": [
    "node_modules"
  ]
}
